{
    "env": {
        "browser": true,
        "jasmine": true
    },
    "extends": "airbnb-base",
    "globals": {
        "document": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "import"
    ],
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "comma-dangle": ["error", "only-multiline"],
        "no-underscore-dangle": 0,
        "no-console": ["error", { "allow": ["error"] }],
        "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.spec.jsx"]}]
    }
}
